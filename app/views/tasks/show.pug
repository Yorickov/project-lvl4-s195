extends /layouts/app.pug

block content
  .container-fluid
    .row.pt-5
      .col-sm-10.mx-auto.bg-light.rounded.p-3
        .row.py-2
          .col-sm-12
            h2= task.name
            p Added by: #{task.creator.fullName}
        .row.py-2
          .col-sm-12
            table.table.border
              tbody
                tr
                  th Status:
                  td= task.status.name
                  th Assign to:
                  td= task.assignedTo.fullName
                tr
                  th Created at:
                  td= task.createdAt
                  th Updated at:
                  td= task.updatedAt

        .row.py-2
          .col-sm-12
            h5 Description:
            p= task.description
        .row.py-2
          .col-sm-12
            h5.d-inline-block Tags:
            each tag in task.Tags
              .d-inline-block
                span= tag.name
