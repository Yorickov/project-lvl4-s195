extends /layouts/app.pug

block content
  .container-fluid
    .row.pt-3
      .col-lg-6.bg-white
        h5.text-center.mb-4.pt-4 Tasks created by me
        table.table.table-striped.table-hover.table-bordered.text-center
          thead.bg-secondary.text-white
            tr
              th #
              th Name
              th Description
              th Status
              th Assign To
              th Created at
          tbody
            each task in tasksCreated         
              tr
                td= task.id
                td
                  a(href=urlFor('tasks#show', task.id))= task.name
                td= task.description
                td= task.status.name
                td
                  a(href=urlFor('users#show', task.assignedTo.id))= task.assignedTo.fullName
                td= formatDate(task.createdAt, 'DD.MM.YYYY')

      .col-lg-6.bg-white
        h5.text-center.mb-4.pt-4 Tasks assigned to me
        table.table.table-striped.table-hover.table-bordered.text-center
          thead.bg-secondary.text-white
            tr
              th #
              th Name
              th Description
              th Status
              th Creator
              th Created at
          tbody
            each task in tasksAssigned         
              tr
                td= task.id
                td
                  a(href=urlFor('tasks#show', task.id))= task.name
                td= task.description
                td= task.status.name
                td
                  a(href=urlFor('users#show', task.creator.id))= task.creator.fullName
                td= formatDate(task.createdAt, 'DD.MM.YYYY')
